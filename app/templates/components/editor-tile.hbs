{{#if addNewStory}}
  <form>
    <div class="form-group">
      <label for="title">Story Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Story Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="body">Story</label>
      {{textarea value=body rows="6" id="body"}}
    </div>

    <div class="form-group">
      <label for="picture">Add a Picture</label>
      {{input value=picture id="picture"}}
    </div>

    <div class="form-group">
      <label for="date">Date Published</label>
      {{input value=date id="date"}}
    </div>

    <button {{action 'saveStory'}}>Save</button>
  </form>
{{else}}
  <button {{action 'showNewStoryForm'}}>New Story</button>
{{/if}}
